:root {
    --primary-bg: #0f0f0f;
    --secondary-bg: #1a1a1a;
    --tertiary-bg: #252525;
    --accent-color: #3b82f6;
    --accent-hover: #2563eb;
    --text-primary: #e5e5e5;
    --text-secondary: #a3a3a3;
    --border-color: #333333;
    --success-color: #10b981;
    --danger-color: #ef4444;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.4);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, var(--primary-bg) 0%, #1a1a2e 100%);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
    padding: 2rem;
}

.container {
    max-width: 900px;
    margin: 0 auto;
}

header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: var(--secondary-bg);
    border-radius: 12px;
    box-shadow: var(--shadow);
}

header h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

main {
    background: var(--secondary-bg);
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
}

.form-section {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
}

.form-section:last-of-type {
    border-bottom: none;
}

.form-section h2 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    font-weight: 500;
}

.form-section-compact {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(51, 51, 51, 0.5);
}

.form-section-compact:last-of-type {
    border-bottom: none;
}

.form-section-compact h4 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
    font-weight: 500;
}

/* Door Configuration Cards */
.door-config-card {
    background: var(--tertiary-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    margin-bottom: 1.5rem;
    overflow: hidden;
    transition: all 0.3s ease;
}

.door-config-card.collapsed .door-config-body {
    display: none;
}

.door-config-card.collapsed .door-config-summary {
    display: block;
}

.door-config-card.collapsed .btn-collapse .collapse-icon {
    transform: rotate(-90deg);
}

.door-config-header {
    background: var(--secondary-bg);
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    user-select: none;
    border-bottom: 1px solid var(--border-color);
    transition: background 0.2s ease;
}

.door-config-header:hover {
    background: rgba(59, 130, 246, 0.05);
}

.door-config-title {
    font-size: 1.2rem;
    color: var(--text-primary);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.door-number {
    color: var(--accent-color);
    font-weight: 600;
}

.door-config-actions {
    display: flex;
    gap: 0.5rem;
    align-items: center;
}

.btn-icon {
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
}

.btn-icon:hover {
    background: var(--tertiary-bg);
    border-color: var(--accent-color);
    color: var(--accent-color);
}

.btn-delete-door:hover {
    background: var(--danger-color);
    border-color: var(--danger-color);
    color: white;
}

.btn-collapse .collapse-icon {
    transition: transform 0.3s ease;
}

.door-config-summary {
    padding: 1rem 1.5rem;
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
}

.door-config-body {
    padding: 1.5rem;
}

/* Add Door Button */
.add-door-section {
    margin: 2rem 0;
    display: flex;
    justify-content: center;
}

.btn-add-door {
    background: var(--tertiary-bg);
    border: 2px dashed var(--border-color);
    color: var(--text-primary);
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-add-door:hover {
    background: var(--secondary-bg);
    border-color: var(--accent-color);
    color: var(--accent-color);
    transform: translateY(-2px);
}

.plus-icon {
    font-size: 1.5rem;
    font-weight: bold;
}

.form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group.full-width {
    grid-column: 1 / -1;
}

.form-group label {
    color: var(--text-secondary);
    font-size: 0.95rem;
    font-weight: 500;
}

.form-group .option-group {
    display: flex;
    gap: 0.5rem;
}

.form-group .option-group .input-field {
    flex: 1;
}

.form-group .option-group .btn-manage {
    flex-shrink: 0;
    white-space: nowrap;
    padding: 0.75rem 1rem;
}

.form-group .btn-manage {
    align-self: flex-start;
    margin-top: 0;
}

.checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    color: var(--text-primary);
    font-size: 0.95rem;
    padding: 0.75rem;
    background: var(--tertiary-bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
}

.checkbox-label:hover {
    border-color: var(--accent-color);
}

.checkbox-label input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: var(--accent-color);
}

.option-group {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.input-field {
    background: var(--tertiary-bg);
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    padding: 0.75rem 1rem;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.3s ease;
    flex: 1;
}

.input-field:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.input-field::placeholder {
    color: var(--text-secondary);
}

select.input-field {
    cursor: pointer;
}

.textarea {
    resize: vertical;
    min-height: 100px;
}

.custom-dimension {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.custom-dimension label {
    color: var(--text-secondary);
    font-size: 0.95rem;
}

.dimension-display {
    color: var(--accent-color);
    font-size: 0.9rem;
    font-weight: 500;
    margin-top: 0.25rem;
    min-height: 1.2rem;
}

.btn-manage {
    background: var(--tertiary-bg);
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
}

.btn-manage:hover {
    background: var(--border-color);
    border-color: var(--accent-color);
    color: var(--accent-color);
}

.btn-primary {
    background: var(--accent-color);
    color: white;
    border: none;
    padding: 0.85rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: var(--shadow);
}

.btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(59, 130, 246, 0.3);
}

.btn-secondary {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    padding: 0.85rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-secondary:hover {
    background: var(--tertiary-bg);
    border-color: var(--text-primary);
}

.form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    justify-content: center;
}

.quote-output {
    margin-top: 2rem;
    padding: 2rem;
    background: var(--tertiary-bg);
    border-radius: 12px;
    border: 1px solid var(--border-color);
}

.quote-output h2 {
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.quote-content {
    background: var(--primary-bg);
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    white-space: pre-wrap;
    font-family: 'Courier New', monospace;
    font-size: 0.95rem;
    line-height: 1.8;
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.hidden {
    display: none;
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
}

.modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.modal-content {
    background: var(--secondary-bg);
    padding: 0;
    border-radius: 12px;
    width: 90%;
    max-width: 500px;
    box-shadow: var(--shadow-lg);
    animation: slideUp 0.3s ease;
}

@keyframes slideUp {
    from {
        transform: translateY(50px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-color);
}

.modal-header h2 {
    font-size: 1.5rem;
    color: var(--text-primary);
}

.close-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    font-size: 2rem;
    cursor: pointer;
    transition: color 0.3s ease;
    line-height: 1;
    padding: 0;
    width: 30px;
    height: 30px;
}

.close-btn:hover {
    color: var(--text-primary);
}

.modal-body {
    padding: 1.5rem;
}

.add-option {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.add-option .input-field {
    flex: 1;
}

.options-list {
    max-height: 400px;
    overflow-y: auto;
}

.option-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--tertiary-bg);
    border-radius: 8px;
    margin-bottom: 0.5rem;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
}

.option-item:hover {
    border-color: var(--accent-color);
}

.option-item.default {
    border-left: 3px solid var(--accent-color);
}

.option-text {
    flex: 1;
    color: var(--text-primary);
}

.option-badge {
    background: var(--accent-color);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    margin-right: 0.5rem;
}

.btn-delete {
    background: var(--danger-color);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-delete:hover {
    background: #dc2626;
    transform: scale(1.05);
}

/* Scrollbar Styling */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: var(--tertiary-bg);
    border-radius: 5px;
}

::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--accent-color);
}

/* Responsive Design */
@media (max-width: 768px) {
    body {
        padding: 1rem;
    }

    header h1 {
        font-size: 2rem;
    }

    main {
        padding: 1.5rem;
    }

    .option-group {
        flex-direction: column;
        align-items: stretch;
    }

    .btn-manage {
        width: 100%;
    }

    .form-actions {
        flex-direction: column;
    }

    .form-actions button {
        width: 100%;
    }

    .modal-content {
        width: 95%;
        margin: 1rem;
    }
}
